extends ../../layouts/default

block head
  title Login - Entra en compart.io
block neck
  link(rel='stylesheet', href='/views/login/index.min.css?#{cacheBreaker}')


block feet
  script(src='/views/login/index.min.js?#{cacheBreaker}')

block body
  div.page.login
    div.container
      div.row
        div.col-sm-12.page-header
            p.info ¡Hola! ¡Nos alegramos de verte por aquí de nuevo! 
          div#login
          if oauthTwitter || oauthGitHub || oauthFacebook || oauthGoogle || oauthTumblr            
            p Or sign in using...
            if oauthMessage
              div.alerts
                div.alert.alert-info.alert-dismissable
                  button.close(type='button', data-dismiss='alert') &times;
                  |#{oauthMessage}&nbsp;
                  b
                    a(href='/signup/') Sign Up Here
            div.form-actions
              div.btn-group.btn-group-justified
                if oauthTwitter
                  a.btn.btn-info(href='/login/twitter/')
                    i.fa.fa-twitter.fa-lg
                    |  Twitter
                if oauthGitHub
                  a.btn.btn-info(href='/login/github/')
                    i.fa.fa-github.fa-lg
                    |  GitHub
                if oauthFacebook
                  a.btn.btn-info(href='/login/facebook/')
                    i.fa.fa-facebook-square.fa-lg
                    |  Facebook
                if oauthGoogle
                  a.btn.btn-info(href='/login/google/')
                    i.fa.fa-google-plus-square.fa-lg
                    |  Google
                if oauthTumblr
                  a.btn.btn-info(href='/login/tumblr/')
                    i.fa.fa-tumblr-square.fa-lg
                    |  Tumblr


        script(type='text/template', id='tmpl-login')
          form
            div.alerts
              |<% _.each(errors, function(err) { %>
              div.alert.alert-danger.alert-dismissable
                button.close(type='button', data-dismiss='alert') &times;
                |<%- err %>
              |<% }); %>
            div.col-sm-5.form-group(class!='<%- errfor.username ? "has-error" : "" %>')
              label Tu email:
              input.form-control(type='text', name='username', value!='<%= username %>')
              span.help-block <%- errfor.username %>
            div.col-sm-5.form-group(class!='<%- errfor.password ? "has-error" : "" %>')
              label Tu contraseña: 
                |(
                a(href='/login/forgot/') ¿la olvidaste?            
                |)
              input.form-control(type='password', name='password', value!='<%= password %>')
              span.help-block <%- errfor.password %>
            div.col-sm-2.form-actions
              button.btn.btn-primary.btn-login(type='button') Entrar                      
        hr
        
        div.row
          div.col-sm-12
            img.img-responsive.center-block(src="/_img/login_compartio.png" alt="compart.io")