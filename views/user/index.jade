extends ../../layouts/default  

block head
	title #{result.user.name} #{result.user.lastname} - compart.io

block body
	div.row
		div.col-sm-4 
			if result.user.image 
				img.user-image.img-rounded.img-responsive(src="#{result.user.image}")
			else
				img.user-image.img-rounded.img-responsive(src="http://dummyimage.com/250x250/DDD/fff.jpg")

		div.col-sm-7.col-sm-offset-1
			h2.text-uppercase ¡Hola! Soy #{result.user.name} #{result.user.lastname}			
			
			p #{result.user.about}		
		
			p 
				| Mi ciudad: 
				a(href="/#{result.city.slug}") #{result.city.name} 
				| city_id: #{result.city._id} 

	div.row
		div.col-sm-6
			p.text-uppercase Lo que #{result.user.name} está ofreciendo ahora mismo
			p id usuario: #{result.user._id}

			if result.donations != null				
				for obj in result.donations
					p Nombre: #{obj.title}
					p id: #{obj._id}
					p status: #{obj.status}
					p giver_user_id: #{obj.giver_user_id}
	

		div.col-sm-6 
			p.text-uppercase Lo que #{result.user.name} está pidiendo ahora mismo

	div.row
		h3.text-uppercase El histórico de #{result.user.name}
		div.col-sm-6
			p Donaciones

		div.col-sm-6
			p Recepciones
